---
import Card from "../components/Card.astro";
import type { Post } from "../lib";
import { formatPostDate, postUrl } from "../lib";

export type Props = {
  posts: Post[];
  page?: number;
  pageSize?: number;
  total?: number;
};

const { posts } = Astro.props;
---

<section class="grid grid-cols-1 gap-6 py-8 md:grid-cols-2 lg:grid-cols-3">
  {
    posts.map((p) => (
      <Card
        href={postUrl(p.slug)}
        title={p.title}
        image={p.featuredImage || p.cover}
        date={formatPostDate(p.date)}
        category={p.category}
        tags={p.tags}
        answer={p.answer}
      />
    ))
  }
</section>
