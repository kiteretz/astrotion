---
import Tags from "../components/Tags.astro";
import type { Tag } from "../lib";

type Props = {
  title: string;
  href: string;
  image?: string;
  date?: string;
  category?: string;
  tags?: Tag[];
  answer: string;
};

const { href, title, image, date: date, category, tags, answer } = Astro.props;
---

<div class="col-span-1">
  <div
    class="transition-all duration-75 ease-in-out h-full relative top-0 hover:-top-2 shadow-lg hover:shadow-xl bg-white rounded-xl overflow-hidden grid"
  >
    <div class="py-6 px-8">
      <a href={href} class="grid-row-[1/3] grid-col-[1]">
        {
          image && (
            <img src={image} alt={title} class="aspect-video object-cover" />
          )
        }
        {date && <p class="text-xs text-gray-600 mb-2">{date}</p>}
        <h2 class="font-bold text-2xl leading-tight">
          {title}
        </h2>
        <p>{answer}</p>
      </a>
      <div class="grid-row-[2/3] grid-col-[1]">
        <p>{category}</p>
        {tags && <Tags tags={tags} />}
      </div>
    </div>
  </div>
</div>
