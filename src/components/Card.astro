---
import Tags from "./Tags.astro";
import type { Tag } from "../lib";
import { twJoin } from "tailwind-merge";

type Props = {
  title: string;
  href: string;
  image?: string;
  date?: string;
  category?: string;
  tags?: Tag[];
  answer: string;
  className?: string;
};

const {
  href,
  title,
  image,
  date: date,
  category,
  tags,
  answer,
  className,
} = Astro.props;
---

<div class="group [perspective:1000px]">
  <div
    class="group grid h-full transition-all duration-700 [transform-style:preserve-3d] group-hover:[transform:rotateY(180deg)] [&>*]:col-span-full [&>*]:row-span-full"
  >
    <div
      class={twJoin(
        "relative h-full overflow-hidden rounded-xl border bg-white shadow-lg transition-all duration-75 ease-in-out hover:shadow-xl",
        className,
      )}
    >
      <div
        class={twJoin(
          "grid gap-2 h-full grid-rows-[repeat(3,auto)_1fr] items-start overflow-hidden",
          image
            ? "grid-rows-[repeat(5,auto)_1fr]"
            : "grid-rows-[repeat(4,auto)_1fr]",
        )}
      >
        <a
          href={href}
          class={twJoin(
            "col-[1] grid grid-rows-subgrid h-full p-5",
            image ? "row-[1/7]" : "row-[1/6]",
          )}
        >
          <div
            class="inline-block w-fit rounded border px-1.5 py-0.5 text-xs font-medium text-gray-600"
          >
            {category}
          </div>
          {
            image && (
              <div class="aspect-[3/2] overflow-hidden rounded-lg">
                <img class="size-full object-cover" src={image} alt={title} />
              </div>
            )
          }
          <h2 class="text-2xl font-bold leading-tight">
            {title}
          </h2>
          <p>{answer}</p>
        </a>
        <div
          class={twJoin(
            "col-[1] pointer-events-none p-5 pt-0",
            image ? "row-[6/7]" : "row-[5/6]",
          )}
        >
          {date && <p class="mb-2 text-xs text-gray-600">{date}</p>}
          {tags && <Tags tags={tags} />}
        </div>
      </div>
    </div>
    <div
      class="absolute inset-0 grid place-items-center rounded-xl border bg-white p-5 [backface-visibility:hidden] [transform:rotateY(180deg)]"
    >
      {answer}
      <a
        href={href}
        class="text-blue-500 underline before:absolute before:inset-0"
      >
        Read more</a
      >
    </div>
  </div>
</div>
