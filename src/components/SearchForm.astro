---
import { twMerge } from "tailwind-merge";

type Props = {
  className?: string;
};

const { className } = Astro.props;
---

<form action="">
  <label for="" class={twMerge("flex relative", className)}>
    <input
      type="search"
      placeholder="サイト内を検索..."
      name="search"
      class="w-full border border-solid border-black rounded bg-white px-4 py-2"
    />
    <button class="absolute inset-y-0 right-4"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 18 18"
        class="w-[18px] aspect-square">
        <path
          stroke="#000"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8.25 14.25a6 6 0 1 0 0-12 6 6 0 0 0 0 12Zm7.5 1.5-3.263-3.262"
        ></path>
      </svg>
    </button>
  </label>
</form>
