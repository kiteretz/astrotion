---
import config from "../config";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="py-12 lg:py-20">
    <article class="mx-auto max-w-6xl px-3">
      <header class="mb-12 text-center">
        <h1
          class:list={["mb-12 text-6xl title", config.notFound?.titleClasses]}>
          {config.notFound?.title || "404 Not Found"}
        </h1>
        <p class="mx-auto max-w-xl">
          {
            config.notFound?.description ||
              "The page you are looking for does not exist."
          }
        </p>
      </header>
    </article>
  </main>
</Layout>
<style
  define:vars={{
    titleFontFamily: config.notFound?.titleFontFamily || "inherit",
  }}
>
  .title {
    font-family: var(--titleFontFamily);
  }
</style>
